<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0 text-primary fw-bold">My lists :</h1>
        <%= link_to "Add a new list", lists_new_path, class: "btn btn-success shadow-sm" %>
      </div>

      <ul class="list-group shadow-sm">
        <% @lists.each do |list| %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3">
            <div>
              <%= link_to list.title, list_path(list), class: "fw-semibold text-decoration-none text-dark fs-5" %>
            </div>
            <div class="btn-group">
              <%= link_to "Delete", list_path(list), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm ms-2" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
